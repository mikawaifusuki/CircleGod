# Database Configuration
# PostgreSQL 连接 URL，替换用户名、密码、主机和数据库名
DATABASE_URL="postgresql://username:password@localhost:5432/database_name"

# NextAuth Configuration
# NextAuth URL，开发环境通常是 http://localhost:3000
NEXTAUTH_URL="http://localhost:3000"
# NextAuth 密钥，使用以下命令生成: openssl rand -base64 32
NEXTAUTH_SECRET="your-nextauth-secret"

# Session Configuration
# Session 过期时间（可选），默认 30 天
SESSION_MAXAGE="2592000"

# Email Configuration (如果使用邮件功能)
# SMTP 配置
SMTP_HOST="smtp.example.com"
SMTP_PORT="587"
SMTP_USER="your-smtp-username"
SMTP_PASSWORD="your-smtp-password"
SMTP_FROM="noreply@example.com"

# External APIs (根据需要添加)
# 示例：OpenAI API（如果使用 AI 功能）
# OPENAI_API_KEY="your-openai-api-key"

# 文件上传配置 (如果使用文件上传功能)
# UPLOAD_DIR="./uploads"
# MAX_FILE_SIZE="5242880" # 5MB in bytes

# 其他自定义配置
# APP_NAME="CircleGod"
# APP_URL="https://your-production-url.com"
# API_BASE_URL="https://api.your-production-url.com"

# Redis Configuration (如果使用 Redis)
# REDIS_URL="redis://username:password@localhost:6379"

# JWT Configuration (如果使用 JWT)
# JWT_SECRET="your-jwt-secret"
# JWT_EXPIRES_IN="7d"
